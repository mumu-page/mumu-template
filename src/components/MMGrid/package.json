        "min": 1,
        "max": 6,
        "props": {
          "step": 1
        },
        "hidden": true
      },
      "layout": {
        "title": "布局",
        "description": "编辑布局单元",
        "type": "array",
        "widget": "cardList",
        "items": {
          "type": "object",
          "properties": {
            "middle": {
              "title": "是否居中",
